# ðŸ³ Dockerfile para Website Next.js do Brimu
# Multi-stage build otimizado para Next.js

# Stage 1: Dependencies
FROM node:18-alpine AS deps
RUN apk add --no-cache libc6-compat
WORKDIR /app

# Copiar arquivos de dependÃªncias
COPY package*.json ./
RUN npm ci --omit=dev

# Stage 2: Builder
FROM node:18-alpine AS builder
WORKDIR /app

# Copiar dependÃªncias do stage anterior
COPY --from=deps /app/node_modules ./node_modules

# Copiar cÃ³digo fonte
COPY . .

# Definir variÃ¡veis de ambiente para build
ENV NEXT_TELEMETRY_DISABLED 1
ENV NODE_ENV production

# Build da aplicaÃ§Ã£o
RUN npm run build

# Stage 3: Production
FROM node:18-alpine AS runner
WORKDIR /app

# Instalar dependÃªncias de runtime
RUN apk add --no-cache tini curl

# Definir variÃ¡veis de ambiente
ENV NODE_ENV production
ENV NEXT_TELEMETRY_DISABLED 1

# Criar usuÃ¡rio nÃ£o-root
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copiar arquivos necessÃ¡rios do build
COPY --from=builder /app/public ./public

# Copiar arquivos buildados
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

# Criar script de inicializaÃ§Ã£o
RUN cat > docker-entrypoint.sh << 'EOF'
#!/bin/sh
set -e

echo "ðŸš€ Starting Brimu Website (Next.js)..."

# Verificar se arquivos necessÃ¡rios existem
if [ ! -f "server.js" ]; then
    echo "âŒ Erro: server.js nÃ£o encontrado!"
    exit 1
fi

# Configurar variÃ¡veis de ambiente runtime se necessÃ¡rio
export HOSTNAME="0.0.0.0"
export PORT="${PORT:-3000}"

echo "ðŸŒ Iniciando servidor na porta $PORT..."
exec node server.js
EOF

RUN chmod +x docker-entrypoint.sh

# Expor porta
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:3000/api/health || exit 1

# Mudar para usuÃ¡rio nÃ£o-root
USER nextjs

# Usar tini como init process
ENTRYPOINT ["/sbin/tini", "--"]

# Comando padrÃ£o
CMD ["./docker-entrypoint.sh"]

# Metadata
LABEL org.opencontainers.image.title="Brimu Website"
LABEL org.opencontainers.image.description="Website Next.js do sistema Brimu"
LABEL org.opencontainers.image.version="1.0.0"
LABEL org.opencontainers.image.vendor="Equipe Brimu"
LABEL org.opencontainers.image.licenses="MIT"