# Configuração do Servidor
PORT=3000
NODE_ENV=development

# Configuração do MongoDB
MONGODB_URI=mongodb+srv://<usuario>:<senha>@cluster0.xxxxxx.mongodb.net/<dbname>?retryWrites=true&w=majority

# Configuração de Segurança
JWT_SECRET=sua_chave_secreta_aqui
JWT_EXPIRES_IN=1d

# Configuração de Upload
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_PATH=./storage/uploads

# Configuração de CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Configuração de E-mail
EMAIL_HOST=smtp.seu_provedor.com
EMAIL_PORT=587
EMAIL_USER=seu_email@dominio.com
EMAIL_PASS=sua_senha_de_email
EMAIL_FROM=no-reply@brimu.com

# Configuração de Backup
BACKUP_ENABLED=true
BACKUP_PATH=./storage/backups

# Configuração de Rate Limit
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_WINDOW_MS=15 * 60 * 1000
RATE_LIMIT_LOGIN_MAX_ATTEMPTS=5

# Configuração de Redis
REDIS_URL=redis://localhost:6379
