{
  "name": "brimu-backend",
  "version": "1.0.0",
  "description": "Backend do sistema Brimu - Gestão para Serviços Arbóreos",
  "main": "dist/src/app.js",
  "scripts": {
    "build": "node --max-old-space-size=4096 node_modules/typescript/bin/tsc",
    "start": "node dist/src/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "dev:js": "nodemon src/app.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:unit": "NODE_ENV=test jest --testPathPattern=unit",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration",
    "test:e2e": "NODE_ENV=test jest --testPathPattern=e2e --runInBand",
    "test:ci": "NODE_ENV=test jest --coverage --watchAll=false --ci",
    "test:silent": "NODE_ENV=test SILENT_TESTS=true jest --silent",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "create-admin": "ts-node scripts/createAdmin.ts",
    "generate-secrets": "ts-node scripts/generateSecrets.ts",
    "test-email": "ts-node scripts/testEmail.ts",
    "test-email-verify": "ts-node scripts/testEmail.ts verify",
    "test-email-send": "ts-node scripts/testEmail.ts send",
    "test-email-alternatives": "ts-node scripts/testEmail.ts alternatives",
    "security-check": "node -e \"console.log('🔐 Verificando configurações de segurança...'); require('./dist/middleware/securityAudit').default.getSecurityStats().then(console.log);\"",
    "setup": "npm run generate-secrets && npm run create-admin",
    "setup-production": "npm run generate-secrets && npm run create-admin && npm run security-check"
  },
  "keywords": [
    "brimu",
    "arborismo",
    "gestao",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Equipe Brimu",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.4",
    "redis": "^4.6.10",
    "rimraf": "^6.0.1",
    "sharp": "^0.32.5",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "@types/compression": "^1.7.4",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.8.7",
    "@types/nodemailer": "^6.4.13",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "jest": "^29.6.2",
    "mongodb-memory-server": "^9.1.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
