# Configurações do Servidor
PORT=5000
HOST=localhost
NODE_ENV=development

# Configurações do Banco de Dados
MONGODB_URI=mongodb://localhost:27017/brimu
# Para MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/brimu

# Configurações de Autenticação
JWT_SECRET=brimu_secret_key_2024_secure_change_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Configurações de Upload
MAX_FILE_SIZE=10485760
MAX_FILES=10

# Configurações de Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_de_app
EMAIL_FROM=noreply@brimu.com

# Configurações de Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Configurações de Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configurações de Cache
CACHE_TTL=300000
CACHE_MAX_SIZE=100

# Configurações de Segurança
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:5173
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# Configurações de Performance
COMPRESSION_ENABLED=true
STATIC_CACHE_MAX_AGE=86400